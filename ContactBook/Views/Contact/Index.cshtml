@model IEnumerable<ContactBook.Models.Contact>

@{
    ViewBag.Title = "Index";
}

@Html.Raw(TempData["DeletedMessage"])

<h3> Contact List Page </h3>

<p>
    @using (Html.BeginForm("Index", "Contact", FormMethod.Get))
    {
        <b>Search By: </b> @Html.RadioButton("searchby", "Name", true) <text> Name </text>
        @Html.RadioButton("searchby", "Address") <text> Address </text><br>

        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>


<p style="color:green">
    @TempData["InsertMessage"]
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="contactTable" class="table table-bordered">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <th colspan="4">  <p style="color:red; text-align:center">No Rows Found</p></th>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </tbody>

</table>


<a href="@Url.Action("ExportToPdf", "Contact")" class="btn btn-danger">Export to PDF</a>
<a href="@Url.Action("ExportToCsv", "Contact")" class="btn btn-success">Export to CSV</a>


<script>
    $(document).ready(function () {
        $('#contactTable').DataTable();
    });
</script>

